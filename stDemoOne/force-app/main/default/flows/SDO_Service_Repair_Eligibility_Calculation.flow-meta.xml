    <formulas>
        <name>fYearsCalc</name>
        <dataType>Number</dataType>
        <expression>MIN(
    3,
    MAX(
        1,
        IF(
            DATE(YEAR(TODAY()), MONTH({!$Record.PurchaseDate}), DAY({!$Record.PurchaseDate})) &gt; TODAY(),
            YEAR(TODAY()) - YEAR({!$Record.PurchaseDate}) - 1,
            YEAR(TODAY()) - YEAR({!$Record.PurchaseDate})
        )
    )
)</expression>
        <scale>1</scale>
